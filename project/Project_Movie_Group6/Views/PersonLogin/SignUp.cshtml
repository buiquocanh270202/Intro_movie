@{
	Layout = "_Layout";
}


@model SignUpModel
<style>


	.login-page {
		max-width: 100%;
		padding: 8% 0 0;
		margin: auto;
	}

	.form {
		position: relative;
		z-index: 1;
		background: #FFFFFF;
		max-width: 100%;
		margin: auto;
		padding: 45px;
		text-align: center;
		box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
	}

		.form input {
			font-family: "Roboto", sans-serif;
			outline: 0;
			background: #f2f2f2;
			width: 100%;
			border: 0;
			margin: 0 0 15px;
			padding: 15px;
			box-sizing: border-box;
			font-size: 14px;
		}

		.form button {
			font-family: "Roboto", sans-serif;
			text-transform: uppercase;
			outline: 0;
			background: #48b5e4;
			width: 100%;
			border: 0;
			padding: 15px;
			color: #FFFFFF;
			font-size: 14px;
			-webkit-transition: all 0.3 ease;
			transition: all 0.3 ease;
			cursor: pointer;
		}

			.form button:hover, .form button:active, .form button:focus {
				background: #ff6b6b;
			}

		.form .message {
			margin: 15px 0 0;
			color: #b3b3b3;
			font-size: 12px;
		}

			.form .message a {
				color: #48b5e4;
				text-decoration: none;
			}

		.form .register-form {
			display: none;
		}

	.container {
		position: relative;
		z-index: 1;
		max-width: 700px;
		margin: 0 auto;
	}

		.container:before, .container:after {
			content: "";
			display: block;
			clear: both;
		}

		.container .info {
			margin: 50px auto;
			text-align: center;
		}

			.container .info h1 {
				margin: 0 0 15px;
				padding: 0;
				font-size: 36px;
				font-weight: 300;
				color: #1a1a1a;
			}

			.container .info span {
				color: #4d4d4d;
				font-size: 12px;
			}

				.container .info span a {
					color: #000000;
					text-decoration: none;
				}

				.container .info span .fa {
					color: #EF3B3A;
				}

	body {
		background-color: #189eff;
		background-image: #189eff;
		font-family: "Roboto", sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
</style>

<div class="login-page">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4"></div>
			<div class="col-md-4">
				<div class="form" style="padding: 40px">
					<form class="" action="SignUp" method="post">
						<h4>ĐĂNG KÝ TÀI KHOẢN</h4>
						<div class="msg-error" style="text-align:left">
							@ViewData["msg"]
						</div>
						@using (Html.BeginForm("Login", "Login", FormMethod.Post))
						{
							@Html.ValidationSummary(false, "", "error")
							;

							//<input type="text" placeholder="email address" /><br />
							@Html.TextBoxFor(model=>model.Email, new{ @placeholder="Email"})
							//<input type="password" placeholder="password" />
							@Html.PasswordFor(model=>model.Password, new{ @placeholder="Mật khẩu"})
							//<input type="text" placeholder="name" style="" />
							@Html.TextBoxFor(model=>model.Fullname, new{@autoforcus="autoforcus" , @placeholder="Họ và tên"})

							<div style="display: flex;">
								<a>Giới tính : </a>

								@*@Html.TextBoxFor(model=>model.Gender, new{ @placeholder="Gender"})*@

								<input type="radio" asp-for="Gender" value="Nam" style="width: 10px; margin-bottom:0; margin-right: 5px" />Nam
								<input type="radio" asp-for="Gender" value="Nữ" style="width: 10px; margin-bottom:0; margin-right: 5px" />Nữ
								<input type="radio" asp-for="Gender" value="Khác" style="width: 10px; margin-bottom:0; margin-right: 5px" />Khác
							</div>



							<br />

							<button type="submit">Đăng ký</button>
						}
						<div style="display: flex">
							Nếu tài khoản đã tồn tại hãy <a href="https://localhost:7028/PersonLogin/Login"> Đăng nhập Tại Đây!</a>
						</div>


					</form>

				</div>
			</div>
			<div class="col-md-4"></div>
		</div>
	</div>
	
</div>



